<div class="container">
  <div class="columns is-centered">
    <div class="column">
      <h2 class="subtitle is-2 has-text-centered">User List</h2>
      <table class="table is-striped is-fullwidth">
        <thead>
          <tr>
            <th>Display name</th>
            <th>Email address</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <%= for user <- @users do %>
            <tr>
              <td><%= user.stage_name %></td>
              <td><%= user.email %></td>
              <td>hewwo</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
